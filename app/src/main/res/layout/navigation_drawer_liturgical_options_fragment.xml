<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="4dp"
    tools:showIn="@layout/navigation_drawer_header_offices">

    <View
        android:id="@+id/drawer_header_liturgical_color"
        android:layout_width="9dp"
        android:layout_height="9dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="8dp"
        android:background="?attr/colorLiturgicalGreen" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/drawer_header_liturgical_day_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="La Sainte Trinité"
            android:textColor="?attr/colorLectureText"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/drawer_header_liturgical_day_degree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-4dp"
            android:fontFamily="sans-serif-light"
            tools:text="Solennité"
            android:textColor="?attr/colorLectureText"
            android:textSize="12dp"
            android:textStyle="italic" />
    </LinearLayout>
</LinearLayout>